{
  "name": "Scrum Poker Average",
  "version": "1.0.0",
  "description": "Extensão do chrome para adicionar a funcionalidade de calculo de média no scrum poker online",
  "content_scripts": [
    {
      "matches": [
        "https://www.scrumpoker-online.org/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "scrum-poker-icon32.png"
  },
  "manifest_version": 2
}